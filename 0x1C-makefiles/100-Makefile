# creating makefile using variables and different rules with cleaning entire clean options
CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic
.PHONY: all clean oclean fclean re
all : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
clean :
	$(RM) *~ $(NAME)
oclean :
	$(RM) $(OBJ)
fclean : clean oclean
re : oclean all
